<%- include('partials/header'); %>

    <div class="row pt-2">
        <div class="col-12 col-md-3 ">
            <%- include('partials/adminPannel/adminNav'); %>
        </div>
        <div class="col-12 col-md-9 ">
            <h1 class="text-center">C-G Experts -- review</h1>
            <% cgExpertData.forEach(function(expert){ %>
                <div class="row pt-3">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="row " style="font-size: 12px;">
                                    <div class="col-2"><%= expert.name %></div>
                                    <div class="col-3"><%= expert.email %></div>
                                    <div class="col-2"> <%= expert.phone %></div>
                                    <div class="col-2"><%= expert.aPhone %></div>
                                    <div class="col-1"><%= expert.city %></div>
                                    <div class="col-1"> <%= expert.mode %></div>
                                    <div class="col-1">
                                        <form action="/dltExpert" method="post" style="display:inline">
                                            <input type="hidden" value="<%= expert._id%>" name="dltExpert">
                                            <button type="submit" class="btn btn-danger" style="font-size: 12px;"> <i class="fa fa-trash"></i> </button>
                                        </form>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <% }); %>

                    </div>
                </div>

        </div>
    </div>

    <%- include('partials/footer'); %>