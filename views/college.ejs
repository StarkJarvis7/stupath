                                    <th scope="col">Course</th>
                                    <th scope="col">Duration</th>
                                    <th scope="col">Fee</th>
                                  </tr>
                                </thead>
                                <tbody>
                                    <% var i = 1; %>
                                    <% clgCoursesData.forEach(function(course){ %>
                                        <tr>
                                            <th scope="row"><%= i++ %></th>
                                            <td><%=course.courseName%></td>
                                            <td><%=course.courseDuration%></td>
                                            <td><%=course.courseFee%> /-</td>
                                        </tr>
                                    <% }); %>
                                  
                                </tbody>
                              </table>
