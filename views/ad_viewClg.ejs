<%- include('partials/header'); %>

    <div class="row pt-2">
        <div class="col-12 col-md-3 ">
            <%- include('partials/adminPannel/adminNav'); %>
        </div>
        <div class="col-12 col-md-9 ">
            <h1 class="text-center">Colleges -- review</h1>
            <% clgData.forEach(function(clg){ %>
                <div class="row pt-3">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="row " style="font-size: 12px;">
                                    <div class="col-3"><%= clg.collegeName %></div>
                                    <div class="col-3"><%= clg.collegeCity %></div>
                                    <div class="col-3"> <%= clg.collegeState %></div>
                                    <div class="col-2"><%= clg.collegePincode %></div>
                                    <div class="col-1">
                                        <form action="/dltClg" method="post" style="display:inline">
                                            <input type="hidden" value="<%= clg._id%>" name="dltClg">
                                            <button type="submit" class="btn btn-danger" style="font-size: 12px;"> <i class="fa fa-trash"></i> </button>
                                        </form>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <% }); %>

                    </div>
                </div>

        </div>
    </div>

    <%- include('partials/footer'); %>